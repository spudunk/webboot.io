{
	"name": "webboot.io",
	"version": "0.0.1",
	"private": true,
	"description": "Webboot.io - Modern web development platform",
	"type": "module",
	"scripts": {
		"dev": "vite dev --host",
		"build": "vite build",
		"preview": "vite preview --host",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"pages:preview": "wrangler pages dev --compatibility-date=2024-02-08 .svelte-kit/cloudflare",
		"pages:deploy": "bun run build && wrangler pages deploy .svelte-kit/cloudflare",
		"elevate": "bun run scripts/elevate.ts"
	},
	"dependencies": {
		"@analytics/simple-analytics": "^0.4.1",
		"@fontsource-variable/nunito": "^5.2.7",
		"analytics": "^0.8.19",
		"lucide-svelte": "^0.356.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-cloudflare": "^7.2.4",
		"@sveltejs/enhanced-img": "^0.3.10",
		"@sveltejs/kit": "^2.44.0",
		"@typescript-eslint/eslint-plugin": "^7.18.0",
		"@typescript-eslint/parser": "^7.18.0",
		"autoprefixer": "^10.4.21",
		"eslint": "^8.57.1",
		"eslint-config-prettier": "^9.1.2",
		"eslint-plugin-svelte": "^2.46.1",
		"postcss": "^8.5.6",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "^5.39.8",
		"svelte-check": "^4.3.2",
		"tailwindcss": "^3.4.18",
		"tslib": "^2.8.1",
		"typescript": "^5.9.3",
		"vite": "^6.3.6",
		"wrangler": "^4.42.0",
		"zod": "^3.25.76"
	},
	"engines": {
		"node": ">=18.0.0",
		"bun": ">=1.0.0"
	},
	"packageManager": "bun@1.2.10"
}
